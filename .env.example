# Application Configuration
NODE_ENV=development
PORT=3000

# JWT Secrets
# IMPORTANT: Generate strong random secrets for production!
# You can use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
ACCESS_TOKEN_SECRET=your-access-token-secret-here-minimum-32-characters
REFRESH_TOKEN_SECRET=your-refresh-token-secret-here-minimum-32-characters

# Database Configuration
DATABASE_HOST=localhost
DATABASE_USERNAME=root
DATABASE_PASSWORD=yourpassword
DATABASE_NAME=usersconnect

# Redis Configuration
REDIS_HOST=localhost
REDIS_PASSWORD=

# Logging
LOG_LEVEL=info

# Optional Services
GRAVATAR_API_KEY=

# ============================================
# S3-Compatible Storage Configuration
# ============================================
# For AWS S3: Leave S3_ENDPOINT empty
# For other providers: Set S3_ENDPOINT to provider URL

S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key
S3_BUCKET_NAME=usersconnect-media
S3_REGION=us-east-1

# Custom endpoint (leave empty for AWS S3)
S3_ENDPOINT=

# Custom public URL (optional, for CDN or custom domains)
S3_PUBLIC_URL=

# ============================================
# SMTP Email Configuration
# ============================================
SMTP_HOST=
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=
SMTP_PASSWORD=your-smtp-app-password-here
SMTP_FROM_NAME=UsersConnect
SMTP_FROM_EMAIL=

# Docker Compose Specific (if using docker-compose.yml)
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_PASSWORD=userpassword