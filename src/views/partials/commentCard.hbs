<div class="comment-wrapper mb-3" data-comment-id="{{comment._id}}">
  <div class="d-flex align-items-center">
    <!-- Bubble + footer -->
    <div class="d-flex flex-column">
      <div class="comment-bubble p-2 mb-1">
        <div class="comment-author fw-bold mb-1">
          <a href="/profile/{{comment.author._id}}">
            <img src="{{comment.author.avatarURL}}"
              alt="{{comment.author.name}}'s avatar"
              class="rounded-circle me-2"
              width="24"
              height="24">{{comment.author.name}}</a>
        </div>
        <div class="comment-content">{{comment.content}}</div>
      </div>

      <!-- Edit mode (hidden by default) -->
      <form class="edit-comment-form" style="display:none;">
        <textarea class="edit-comment-textarea form-control" required>{{comment.content}}</textarea>
        <div class="edit-btn-row d-flex gap-2 mt-2">
          <button type="submit" class="btn btn-primary btn-sm">Save</button>
          <button type="button" class="btn btn-danger btn-sm cancel-edit-comment-btn">Cancel</button>
        </div>
      </form>

      <!-- Footer directly below bubble -->
      <div class="comment-footer d-flex justify-content-between align-items-center small mt-1">
        <!-- Time ago left -->
        <span class="comment-date text-muted">{{fromNow comment.createdAt}}</span>

        <!-- Edit & delete labels right -->
        {{#if (isAuthorized comment.author._id currentUser)}}
        <div class="comment-actions d-flex align-items-center">
          <button class="btn btn-link text-decoration-none me-2 edit-comment-btn">
            <i class="fa-solid fa-pen"></i>
          </button>
          <form action="/comments/{{comment._id}}" method="POST" class="d-inline m-0 p-0">
            <button type="submit" class="btn btn-link delete-comment-btn p-0 m-0 text-danger text-decoration-none" data-comment-id="{{comment._id}}">
              <i class="fa-solid fa-trash"></i>
            </button>
          </form>
        </div>
        {{/if}}
      </div>
    </div>

    <!-- Like & Dislike buttons + counts (HORIZONTAL) -->
    <div class="d-flex flex-row align-items-center ms-2 gap-2">
      <!-- Like button + count (vertical group) -->
      <div class="d-flex flex-column align-items-center">
        <form action="/comments/{{comment._id}}/like" method="POST" data-comment-id="{{comment._id}}" class="m-0">
          <button class="icon-btn like-btn {{#if (isLiked comment.likes currentUser._id)}}liked{{/if}}"
                  data-liked="{{isLiked comment.likes currentUser._id}}"
                  data-user-id="{{currentUser._id}}"
                  title="Like/Unlike">
            <i class="fa-solid fa-thumbs-up"></i>
          </button>
        </form>
        <span style="cursor: pointer;"
          class="like-count mt-1 small text-muted"
          id="like-count-{{comment._id}}"
          data-comment-id="{{comment._id}}"
          data-likes='[{{#each comment.likes}}{"_id": "{{this._id}}", "name": "{{this.name}}", "avatarURL": "{{this.avatarURL}}"}{{#unless @last}},{{/unless}}{{/each}}]'>
          {{comment.likes.length}}
        </span>
      </div>

      <!-- Dislike button + count (vertical group) -->
      <div class="d-flex flex-column align-items-center">
        <form action="/comments/{{comment._id}}/dislike" method="POST" data-comment-id="{{comment._id}}" class="m-0">
          <button class="icon-btn dislike-btn {{#if (isLiked comment.dislikes currentUser._id)}}disliked{{/if}}"
                  data-disliked="{{isLiked comment.dislikes currentUser._id}}"
                  data-user-id="{{currentUser._id}}"
                  title="Dislike/Undislike">
            <i class="fa-solid fa-thumbs-down"></i>
          </button>
        </form>
        <span style="cursor: pointer;"
          class="dislike-count mt-1 small text-muted"
          id="dislike-count-{{comment._id}}"
          data-comment-id="{{comment._id}}"
          data-dislikes='[{{#each comment.dislikes}}{"_id": "{{this._id}}", "name": "{{this.name}}", "avatarURL": "{{this.avatarURL}}"}{{#unless @last}},{{/unless}}{{/each}}]'>
          {{comment.dislikes.length}}
        </span>
      </div>
    </div>
  </div>
</div>