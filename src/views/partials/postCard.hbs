<div class="card post-card shadow-sm mb-4">
  <div class="card-body">
    <!-- GRID: main content + action rail -->
    <div class="post-grid">
      <div class="post-content-view">
        <div class="post-author text-muted mb-2">
          <a href="/profile/{{post.author._id}}">
            <img src="{{post.author.avatarURL}}"
              alt="{{post.author.name}}'s avatar"
              class="rounded-circle me-2"
              width="32"
              height="32">{{post.author.name}}</a>, {{fromNow post.createdAt}}
        </div>
        <h5 class="post-title mb-1">{{post.title}}</h5>
        
        {{#if post.imageURL}}
          <img src="{{post.imageURL}}"
               alt="Post image"
               class="img-fluid rounded mb-3 post-image"
               style="max-width: 100%; height: auto; max-height: 500px; object-fit: cover;">
        {{/if}}

<p class="post-content mb-3">{{~post.content~}}</p>
      </div>

      <form class="edit-post-form" style="display:none;" data-post-id="{{post._id}}" data-current-image="{{post.imageURL}}">
        <input type="text"
              class="edit-post-title form-control"
              value="{{post.title}}"
              maxlength="100"
              required>

        <textarea class="edit-post-textarea form-control" required>{{post.content}}</textarea>

        <!-- Image editing section -->
        <div class="mt-2">
          {{#if post.imageURL}}
            <div class="current-image-container mb-2">
              <label class="form-label small text-muted">Current Image:</label>
              <div class="position-relative d-inline-block">
                <img src="{{post.imageURL}}" alt="Current post image" class="img-thumbnail" style="max-height: 150px;">
                <button type="button" class="btn btn-sm btn-danger position-absolute top-0 end-0 m-1 remove-current-image-btn" title="Remove image">
                  <i class="fa-solid fa-times"></i>
                </button>
              </div>
            </div>
          {{/if}}

          <div class="mb-2">
            <label for="edit-image-{{post._id}}" class="form-label small">{{#if post.imageURL}}Change Image{{else}}Add Image{{/if}} (optional):</label>
            <input type="file"
                   class="form-control form-control-sm edit-post-image"
                   id="edit-image-{{post._id}}"
                   accept="image/*">
          </div>

          <!-- New image preview -->
          <div class="new-image-preview-container" style="display:none;">
            <label class="form-label small text-muted">New Image Preview:</label>
            <div class="position-relative d-inline-block">
              <img src="" alt="New image preview" class="new-image-preview img-thumbnail" style="max-height: 150px;">
              <button type="button" class="btn btn-sm btn-danger position-absolute top-0 end-0 m-1 remove-new-image-btn" title="Remove">
                <i class="fa-solid fa-times"></i>
              </button>
            </div>
          </div>
        </div>

        <div class="edit-btn-row d-flex gap-2 mt-2">
          <button type="submit" class="btn btn-primary btn-sm">Save</button>
          <button type="button" class="btn btn-danger btn-sm cancel-edit-post-btn">Cancel</button>
        </div>
      </form>

      <!-- RIGHT rail -->
      <div class="post-actions-rail">
        {{#if (isAuthorized post.author._id currentUser)}}
          <button type="button" class="icon-btn edit-post-btn" title="Edit" data-post-id="{{post._id}}">
              <i class="fa-solid fa-pen"></i>
          </button>
          <form action="/posts/{{post._id}}" method="POST" class="m-0">
            <button type="submit" class="icon-btn danger delete-post-btn" title="Delete" data-post-id="{{post._id}}">
              <i class="fa-solid fa-trash"></i>
            </button>
          </form>
        {{/if}}

        <form action="/posts/{{post._id}}/like" method="POST" data-post-id="{{post._id}}" class="m-0">
          <button class="icon-btn like-btn {{#if (isLiked post.likes currentUser._id)}}liked{{/if}}" data-liked="{{isLiked post.likes currentUser._id}}" title="Like/Unlike">
            <i class="fa-solid fa-thumbs-up"></i>
          </button>
        </form>
        <span style="cursor: pointer;"
          class="like-count mt-1 small text-muted"
          id="like-count-{{post._id}}"
          data-post-id="{{post._id}}"
          data-likes='[{{#each post.likes}}{"_id": "{{this._id}}", "name": "{{this.name}}", "avatarURL": "{{this.avatarURL}}"}{{#unless @last}},{{/unless}}{{/each}}]'>
          {{post.likes.length}}
        </span>
      </div>
    </div> <!-- end post-grid -->

    <!-- Comment form -->
    <form action="/comments/{{post._id}}" method="POST" 
          class="comment-form mb-3" data-post-id="{{post._id}}">
      <div class="comment-input-wrapper d-flex">
        <textarea name="content" id="content" 
                  class="form-control" 
                  placeholder="Write a comment..." required></textarea>
        <button class="btn btn-primary ms-2" type="submit">Comment</button>
      </div>
    </form>

    <!-- Comments list -->
    <div class="comments-section" id="comments-{{post._id}}">
      {{#each post.comments}}
        {{> commentCard comment=this currentUser=../currentUser}}
      {{/each}}
    </div>
  </div>
</div>