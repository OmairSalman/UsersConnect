<div class="login-page d-flex justify-content-center align-items-center min-vh-100">
  <div class="login-card card p-4 shadow-sm" style="max-width: 450px; width: 100%;">
    <div class="text-center mb-4">
      <a href="/">
        <img src="/images/logo-icon.svg" alt="UsersConnect Logo" class="mb-3" style="height: 80px;">
      </a>
      <h2 class="fw-bold text-primary">Enter Reset Code</h2>
    </div>

    <!-- Success message -->
    <div class="alert alert-success mb-3" role="alert">
      <p class="mb-2"><strong>If an account exists with this email, a reset code has been sent.</strong></p>
      <p class="mb-0 text-muted small">Check your email for the 6-digit code. Make sure to check your spam folder if you don't see it.</p>
    </div>

    <form id="verify-code-form">
      <!-- Hidden email field -->
      <input type="hidden" id="email" name="email">

      <div class="mb-3">
        <label for="code" class="form-label">Reset Code</label>
        <input type="text" class="form-control text-center" id="code" name="code" required 
               placeholder="000000" maxlength="6" pattern="[0-9]{6}"
               style="font-size: 1.5rem; letter-spacing: 0.5rem;" autofocus>
        <small class="form-text text-muted">Enter the 6-digit code from your email</small>
      </div>

      <div id="error-message" class="text-center text-danger mb-3" style="display:none;"></div>

      <div class="d-grid mb-3">
        <button type="submit" class="btn btn-lg btn-primary" id="submit-btn">Verify Code</button>
      </div>

      <div class="d-grid mb-3">
        <button type="button" class="btn btn-outline-secondary" id="resend-btn">
          <i class="fa-solid fa-rotate"></i> Resend Code
        </button>
      </div>

      <div class="text-center">
        <p class="mb-0">Want to try a different email? <a href="/forgot-password" class="text-decoration-none fw-bold" style="color: #6610f2;">Start over</a></p>
      </div>
    </form>
  </div>
</div>

<script src="/js/verify-reset-code.js"></script>