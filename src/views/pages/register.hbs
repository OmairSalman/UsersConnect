<div class="login-page d-flex justify-content-center align-items-center min-vh-100">
  <div class="login-card card p-4 shadow-sm" style="max-width: 400px; width: 100%;">
    <div class="text-center mb-4">
      <!-- Clickable logo -->
      <a href="/">
        <img src="/images/logo-icon.svg" alt="UsersConnect Logo" class="mb-3" style="height: 80px;">
      </a>
      <h2 class="fw-bold text-primary">Register</h2>
    </div>

    <!-- Register Form -->
    <form id="register-form" action="/auth/register" method="POST">
      <!-- Full Name -->
      <div class="mb-3">
        <label for="name" class="form-label">Full Name</label>
        <input type="text" class="form-control" id="name" name="name" required placeholder="John Doe">
      </div>

      <!-- Email -->
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" name="email" required placeholder="you@example.com">
      </div>

      <!-- Password -->
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" class="form-control" id="password" name="password" required placeholder="Enter your password">
      </div>

      <!-- Confirm Password -->
      <div class="mb-3">
        <label for="confirmPassword" class="form-label">Confirm Password</label>
        <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required placeholder="Re-enter your password">
      </div>

      <!-- Error Message -->
      <div id="register-error" class="alert alert-danger" style="display: none;" role="alert"></div>

      <!-- Submit -->
      <div class="d-grid mb-3">
        <button type="submit" class="btn btn-lg btn-primary" id="register-btn">Register</button>
      </div>

      <!-- Optional: login link -->
      <div class="text-center">
        <p class="mb-0">Already have an account? <a href="/login" class="text-decoration-none fw-bold" style="color: #6610f2;">Login</a></p>
      </div>
    </form>
  </div>
</div>

<script src="/js/register.js"></script>