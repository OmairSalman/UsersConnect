<div class="login-page d-flex justify-content-center align-items-center min-vh-100">
  <div class="login-card card p-4 shadow-sm" style="max-width: 400px; width: 100%;">
    <div class="text-center mb-4">
      <a href="/">
        <img src="/images/logo-icon.svg" alt="UsersConnect Logo" class="mb-3" style="height: 80px;">
      </a>
      <h2 class="fw-bold text-primary">Forgot Password</h2>
      <p class="text-muted">Enter your email to receive a reset code</p>
    </div>

    <form id="forgot-password-form">
      <div class="mb-3">
        <label for="email" class="form-label">Email Address</label>
        <input type="email" class="form-control" id="email" name="email" required placeholder="you@example.com">
      </div>

      <div id="message" class="text-center mb-3" style="display:none;"></div>

      <div class="d-grid mb-3">
        <button type="submit" class="btn btn-lg btn-primary" id="submit-btn">Send Reset Code</button>
      </div>

      <div class="text-center">
        <p class="mb-0">Remember your password? <a href="/login" class="text-decoration-none fw-bold" style="color: #6610f2;">Login</a></p>
      </div>
    </form>
  </div>
</div>

<script src="/js/forgot-password.js"></script>